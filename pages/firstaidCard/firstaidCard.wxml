<view class="container" wx:if='{{!myCard}}'>
	<button bindtap='goToForm'>创建医疗急救卡</button>
</view>
<view wx:else>
	<scroll-view scroll-y>
		<view class="row box">
			<label>出生日期</label>
			<text>{{myCard.date}}</text>
		</view>
		<view class="row box">
			<label>血型</label>
			<text>{{myCard.blood}}型</text>
		</view>
		<view class="row box">
			<label>身高</label>
			<text>{{myCard.height}}</text>厘米
		</view>
		<view class="row box">
			<label>体重</label>
			<text>{{myCard.weight}}</text>千克
		</view>
		<view class="col box">
			<label>医疗状况</label>
			<text>{{myCard.ylzk}}</text>
		</view>
		<view class="col box">
			<label>医疗笔记</label>
			<text>{{myCard.ylbj}}</text>
		</view>
		<view class="col box">
			<label>过敏反应</label>
			<text>{{myCard.gmfy}}</text>
		</view>
		<view class="col box">
			<label>用药</label>
			<text>{{myCard.yy}}</text>
		</view>

		<view class="row box">
			<label>器官捐赠者</label>
			<text>{{myCard.qgjz?'是':'否'}}</text>
		</view>
		<view class="col box">
			<label>紧急联系人</label>
			<text>{{myCard.tel}}</text>
		</view>
	</scroll-view>
	<view class="bottom">
		<button bindtap='makeCall'>打电话给紧急联系人</button>
		<button bindtap='goToForm'>编辑医疗急救卡</button>
		<button bindtap='delMyCard'>删除医疗急救卡</button>
	</view>
</view>
