.container {
	height: 100vh;
	background-color: silver;
	display: flex;
	flex-direction: column;
}

.topPanel {
	height: 300rpx;
	background-color: #686F79;
	display: flex;
	flex-direction: row;
}

.box1 {
	display: flex;
	flex-direction: column;
	align-items: center;
	width: 33%;
	height: 250rpx;
}

.box1 image {
	width: 110rpx;
	height: 110rpx;
	margin: 20rpx;
}

.box1 text {
	text-align: center;
	color: white;
	font-size: 35rpx;
}

.servicePanel {
	min-height: 600rpx;
	background-color: white;
	margin: 20rpx 0;
}

.serviceTitle {
	padding: 20rpx;
	border: 1rpx solid silver;
	font-size: 30rpx;
	color: gray;
}

.serviceBlocks {
	display: flex;
	flex-direction: row;
	/**允许换行**/
	flex-wrap: wrap;
}

.box2 {
	border: 0.00625rem solid silver;
	display: flex;
	flex-direction: column;
	align-items: center;
	/***垂直方向居中***/
	justify-content: center;
	width: 33%;
	height: 230rpx;
}

.box2 image {
	width: 90rpx;
	height: 90rpx;
}

.box2 text {
	font-size: 30rpx;
}
